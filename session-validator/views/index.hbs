<h1> {{ title }}</h1>

{{# if success}}
    sucessful validation <br>
{{ else }}
    {{# if errors}}
        <p> errors:</p>
        <ul>
            {{# each errors}}
                <li> {{ this.msg }} </li>
            {{/each}}
        </ul>
    {{/if}}
    <form action="/submit" method="post">
        email:
        <input type="text"  name="email"> <br>
        pass1:
        <input type="password"  name="pass1"> <br>
        pass2:
        <input type="password"  name="pass2"> <br>
        <button type="submit"> Sign up</button>
    </form>
{{/if}}
